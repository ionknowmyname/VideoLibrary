<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Add New Video
            </h1>

            <%- include ("./partials/messages") %>
            <form action="/addVideo" method="POST">
                <div class="form-group">
                    <label for="name">Video Title</label>
                    <input
                        type="title"
                        id="title"
                        name="title"
                        class="form-control"
                        placeholder="Enter Video Title"
                        value="<%= typeof title != 'undefined' ? title : '' %>"
                    />
                </div>

                <div class="form-group">
                    <label for="designation">Video Type: </label>
                    <select name="type" id="type">
                        <% let options = [ "Select Video type", "Regular",
                        "Children's movie", "New Release" ]; %> <% for(let i =
                        0; i < options.length; i++) { %> <% if(options[i] ==
                        "Select Video type"){ %>
                        <option value="" disabled selected hidden>
                            Select Video Type
                        </option>
                        <% } %>

                        <option value="<%= options[i] %>">
                            <%= options[i] %>
                        </option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="designation">Video Genre: </label>
                    <select name="genre" id="genre">
                        <% let options2 = [ "Select Video Genre", "Action",
                        "Drama", "Romance", "Comedy", "Horror" ]; %> <% for(let
                        i = 0; i < options2.length; i++) { %> <% if(options2[i]
                        == "Select Video Genre"){ %>
                        <option value="" disabled selected hidden>
                            Select Video Genre
                        </option>
                        <% } %>

                        <option value="<%= options2[i] %>">
                            <%= options2[i] %>
                        </option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="email">Maximum Age</label>
                    <input
                        type="maxAge"
                        id="maxAge"
                        name="maxAge"
                        class="form-control"
                        placeholder="Enter Max Age"
                        value="<%= typeof maxAge != 'undefined' ? maxAge : '' %>"
                    />
                </div>

                <div class="form-group">
                    <label for="phone">Year Released</label>
                    <input
                        type="releaseYear"
                        id="releaseYear"
                        name="releaseYear"
                        class="form-control"
                        placeholder="Enter Year of Release"
                        value="<%= typeof releaseYear != 'undefined' ? releaseYear : '' %>"
                    />
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Add Movie
                </button>
            </form>
            <p class="lead mt-4">
                <a href="/allvideos">All Videos List</a>
            </p>
        </div>
    </div>
</div>
