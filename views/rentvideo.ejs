<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">Rent Video</h1>

            <%- include ("./partials/messages") %>
            <form action="/allvideos/rent/<%= list._id %>" method="POST">
                <div class="form-group">
                    <label>Title: </label>
                    <input
                        type="title"
                        id="title"
                        name="title"
                        class="form-control"
                        value="<%= list.title %>"
                    />
                </div>

                <div class="form-group">
                    <label>Type: </label>
                    <input
                        type="type"
                        id="type"
                        name="type"
                        class="form-control"
                        value="<%= list.type %>"
                    />
                </div>

                <div class="form-group">
                    <label>Genre: </label>
                    <span><%= list.genre %></span>
                </div>

                <div class="form-group">
                    <label for="email">Username</label>
                    <input
                        type="username"
                        id="username"
                        name="username"
                        class="form-control"
                        placeholder="Enter Username"
                        value="<%= typeof username != 'undefined' ? username : '' %>"
                    />
                </div>

                <div class="form-group">
                    <label>Release Year: </label>
                    <input
                        type="releaseYear"
                        id="releaseYear"
                        name="releaseYear"
                        class="form-control"
                        value="<%= list.releaseYear, %>"
                    />
                </div>

                <div class="form-group">
                    <label>Max Age: </label>
                    <input
                        type="maxAge"
                        id="maxAge"
                        name="maxAge"
                        class="form-control"
                        value="<%= list.maxAge %>"
                    />
                </div>

                <div class="form-group">
                    <label for="phone">Enter no. of rent days</label>
                    <input
                        type="days"
                        id="days"
                        name="days"
                        class="form-control"
                        placeholder="Enter no. of rent days"
                        value="<%= typeof days != 'undefined' ? days : '' %>"
                    />
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Rent
                </button>
            </form>
        </div>
    </div>
</div>
